@using ThietKeNoiThat.Models
@model List<GioHang>
@{
    ViewBag.Title = "GioHang";
    Layout = "~/Views/Shared/layoutuser.cshtml";
}

<h2 style="text-align:center;font-family:'Times New Roman'">Thông Tin Giỏ Hàng Của Bản </h2>
<table align="center" border="1">
    <tr style="text-align:center;font-weight:bold">
        <td>
            Mã Sản Phẩm
        </td>
        <td>
            Tên Sản Phẩm
        </td>
        <td style="width:20%">
            Ảnh Minh Họa
        </td>
        <td>
            Số Lượng
        </td>
        <td>
            Đơn Giá
        </td>
        <td>
            Thành Tiền
        </td>
        <td>
        </td>
        <td>
        </td>
        <td>
        </td>
    </tr>
    @foreach (var i in Model)
    {
<tr style="text-align:center;font-weight:bold">
    <td>@i.idproduct</td>
    <td>@i.name</td>
    <td><img src="~/Content/img/product/@i.img" style="width:100%" /></td>
    @using (Html.BeginForm("CapNhatGioHang", "GioHang", new { @imasp = i.idproduct }))
    {
        <td>
             <input type="number"  min="1" name="txtSoLuong" value="@i.soluong" style="background-color:yellow;text-align:center"
           </td>
    <td>@String.Format("{0:0,0}", i.dongia)</td>
    <td>@String.Format("{0:0,0}", i.thanhtien)</td>
    <td> <a href="@Url.Action("chitiet", "User", new { id = i.idproduct })"> Chi Tiết</a></td>
    <td>@Html.ActionLink("Xóa", "XoaGioHang", new { @imasp = i.idproduct })</td>
    <td><input type="submit" value="Cập Nhật" /></td>
    }
</tr>
    }
<tr>
   
    <td colspan="4" style="color:red">Số Lượng Sản Phẩm : @ViewBag.TongSoLuong</td>
   

    <td colspan="5" style="color:red">Tổng Tiền Thanh Toán :@String.Format("{0:0,0}", ViewBag.TongTien) VNĐ</td>
    
</tr>
    <tr style="font-weight:bold;color:blue;text-align:right">
        <td colspan="9">
            @Html.ActionLink("Xóa Giỏ Hàng", "XoaAllGioHang")
        </td>
    </tr>
    <tr style="font-weight:bold;color:blue;text-align:right;background:#b5b4b4">
        <td colspan="9" align="center">
            @Html.ActionLink("Đặt Hàng", "Index", "Default")
        </td>
    </tr>
</table>

